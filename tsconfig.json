{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "strictNullChecks": true,
  },
  "filesGlob": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"],
  "atom": {
    "rewriteTsconfig": false
  }
}
